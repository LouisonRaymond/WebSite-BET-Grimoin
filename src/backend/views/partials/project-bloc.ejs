<div class="project-tile col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="<%= model.delay %>">
    <div class="service-item">
      <div class="overflow-hidden">
        <img
          class="img-fluid project-tile-image"
          src="<%= model.project.picture %>"
          alt="image du batiment"
        />
      </div>
      <div
        class="p-4 text-center border border-5 border-light border-top-0"
      >
        <h4 class="mb-3"><%= model.project.title %></h4>
        <div class="tile-description">
          <%- md(model.project.shortDescription) %>
        </div>
        <a class="fw-medium" href="<%= `/${model.locale}/projet/${model.project.id}-${model.project.title}` %>"
          ><%= model.translations['global.showMore'] %><i class="fa fa-arrow-right ms-2"></i
        ></a>
      </div>
    </div>
  </div>